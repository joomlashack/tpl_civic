				<field name="enableFluidContainerGridBottom2" type="radio" default="0" label="TPL_JS_CIVIC_ENABLE_FLUID_GRID_BOTTOM_2" description="TPL_JS_CIVIC_ENABLE_FLUID_GRID_BOTTOM_2_DESC">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
