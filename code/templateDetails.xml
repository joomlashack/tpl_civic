				</field>
				<field name="bgColorGridBottom2" type="list" default="tone_color" label="TPL_JS_CIVIC_GRID_BOTTOM_2_BG_COLOR" description="TPL_JS_CIVIC_GRID_BG_COLOR_DESC">
					<option value="tone_color">TPL_JS_CIVIC_TONE_COLOR</option>
