				<field name="separateGridBottom2" type="radio" default="1" label="TPL_JS_CIVIC_SEPARATE_GRID_BOTTOM_2" description="TPL_JS_CIVIC_SEPARATE_GRID_BOTTOM_2_DESC">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
			</fieldset>

			<fieldset name="TPL_CIVIC_BACKGROUND_IMAGE_GRIDS_POSITIONS">
